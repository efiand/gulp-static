{
  "extends": [
		"stylelint-config-htmlacademy",
		"stylelint-order-htmlacademy"
	],
  "rules": {
    "declaration-no-important": true,
    "indentation": [2, {"ignore": ["inside-parens"]}],
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
				"if",
				"else",
        "each",
				"mixin",
				"include"
      ]
    }]
  }
}
